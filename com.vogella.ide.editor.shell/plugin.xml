<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="shell"
            id="com.vogella.ide.editor.shell.content-type"
            name="Shell"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.tm4e.registry.grammars">
      <grammar
            path="syntaxes/Shell-Unix-Bash.json"
            scopeName="source.shell">
      </grammar>
      <scopeNameContentTypeBinding
            contentTypeId="com.vogella.ide.editor.shell.content-type"
            scopeName="source.shell">
      </scopeNameContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="com.vogella.ide.editor.shell.content-type"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   
   <extension
      point="org.eclipse.tm4e.languageconfiguration.languageConfigurations">
   <languageConfiguration
         contentTypeId="com.vogella.ide.editor.shell.content-type"
         path="language-configurations/json.language-configuration.json">
   </languageConfiguration>
</extension>

</plugin>
